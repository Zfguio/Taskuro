<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Taskuro.Views.Public.LoginPage.LoginPageView">
    <Grid Background="AntiqueWhite">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="1.25*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackLayout Background="AliceBlue" Padding="20" Margin="30" Spacing="10" Grid.Column="1">
            <Label TextColor="Black" Text="Welcome" HorizontalTextAlignment="Center"></Label>
            <Border Stroke ="DimGray" StrokeShape="RoundRectangle 10,10,10,10" >
                <Entry TextColor="Black" Placeholder="Email" ></Entry>
            </Border>
            <Border Stroke ="DimGray" StrokeShape="RoundRectangle 10,10,10,10">
                <Entry TextColor="Black" Placeholder="Password" ></Entry>
            </Border>
            <Button Text="Sign In" Command="{Binding LoginCommand}"></Button>
            <Button Text="Sign Up"></Button>
        </StackLayout>
    </Grid>
</ContentPage>